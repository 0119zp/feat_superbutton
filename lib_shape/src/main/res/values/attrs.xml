<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="text_view_shape">
        <!--默认配置-->
        <attr name="shape_text" format="reference|string" />
        <!--按钮文字颜色-->
        <attr name="shape_text_color" format="reference|color" />
        <!--按钮文字大小-->
        <attr name="shape_text_size" format="dimension" />
        <attr name="shape_text_style" format="enum">
            <!--默认-->
            <enum name="normal" value="1" />
            <!--加粗-->
            <enum name="bold" value="2" />
        </attr>
        <!--文字是否单行，默认单行-->
        <attr name="shape_single_line" format="boolean" />
        <!--默认背景颜色-->
        <attr name="shape_color_normal" format="reference|color" />
        <!--按压时的背景颜色-->
        <attr name="shape_color_pressed" format="reference|color" />
        <!--图片在文字左边-->
        <attr name="shape_drawable_left" format="reference|color" />
        <!--图片在文字右边-->
        <attr name="shape_drawable_right" format="reference|color" />
        <!--图片在文字上边-->
        <attr name="shape_drawable_top" format="reference|color" />
        <!--图片在文字下边-->
        <attr name="shape_drawable_bottom" format="reference|color" />
        <!--图片距文字的距离-->
        <attr name="shape_drawable_padding" format="dimension" />
        <!--图标根据文字大小自动缩放图标-->
        <attr name="shape_drawable_auto" format="boolean" />
        <!--只有图片的情况,此时会忽略文字，即便设置-->
        <attr name="shape_drawable_middle" format="reference|color" />
        <!--图片在中间时宽-->
        <attr name="shape_drawable_middle_width" format="dimension" />
        <!--图片在中间时高-->
        <attr name="shape_drawable_middle_height" format="dimension" />
        <!--形状-->
        <attr name="shape_type" format="enum">
            <!--圆形-->
            <enum name="CIRCLE" value="1" />
            <!--矩形-->
            <enum name="RECT" value="2" />
        </attr>
        <!--按钮背景是渐变色时设置-->
        <!--开始颜色-->
        <attr name="shape_color_start" format="color" />
        <!--结束颜色-->
        <attr name="shape_color_end" format="color" />
        <!--颜色方向-->
        <attr name="shape_color_direction" format="enum">
            <!--从上到下-->
            <enum name="TOP_BOTTOM" value="0x1" />
            <!--从右上到左下-->
            <enum name="TR_BL" value="0x2" />
            <!--从右到左-->
            <enum name="RIGHT_LEFT" value="0x3" />
            <!--从右下到左上-->
            <enum name="BR_TL" value="0x4" />
            <!--从下到上-->
            <enum name="BOTTOM_TOP" value="0x5" />
            <!--从左下到右上-->
            <enum name="BL_TR" value="0x6" />
            <!--从左到右-->
            <enum name="LEFT_RIGHT" value="0x7" />
            <!--从左上到右下-->
            <enum name="TL_BR" value="0x8" />
        </attr>
        <!--按钮圆角，如果单独设置会覆盖此设置-->
        <attr name="shape_corner" format="dimension" />
        <!--左上角圆角半径-->
        <attr name="shape_corner_left_top" format="dimension" />
        <!--左下角圆角半径-->
        <attr name="shape_corner_left_bottom" format="dimension" />
        <!--右上角圆角半径-->
        <attr name="shape_corner_right_top" format="dimension" />
        <!--右下角圆角半径-->
        <attr name="shape_corner_right_bottom" format="dimension" />
        <!--边框宽度-->
        <attr name="shape_border_width" format="dimension" />
        <!--边框颜色-->
        <attr name="shape_border_color" format="color" />
        <!--按钮是否可以点击-->
        <attr name="shape_button_click_able" format="boolean" />
    </declare-styleable>

    <declare-styleable name="layout_shape">
        <!--默认背景颜色-->
        <attr name="layout_color_normal" format="reference|color" />
        <!--形状-->
        <attr name="layout_type" format="enum">
            <!--圆形-->
            <enum name="CIRCLE" value="1" />
            <!--矩形-->
            <enum name="RECT" value="2" />
        </attr>
        <!--按钮背景是渐变色时设置-->
        <!--开始颜色-->
        <attr name="layout_color_start" format="color" />
        <!--结束颜色-->
        <attr name="layout_color_end" format="color" />
        <!--颜色方向-->
        <attr name="layout_color_direction" format="enum">
            <!--从上到下-->
            <enum name="TOP_BOTTOM" value="0x1" />
            <!--从右上到左下-->
            <enum name="TR_BL" value="0x2" />
            <!--从右到左-->
            <enum name="RIGHT_LEFT" value="0x3" />
            <!--从右下到左上-->
            <enum name="BR_TL" value="0x4" />
            <!--从下到上-->
            <enum name="BOTTOM_TOP" value="0x5" />
            <!--从左下到右上-->
            <enum name="BL_TR" value="0x6" />
            <!--从左到右-->
            <enum name="LEFT_RIGHT" value="0x7" />
            <!--从左上到右下-->
            <enum name="TL_BR" value="0x8" />
        </attr>
        <!--按钮圆角，如果单独设置会覆盖此设置-->
        <attr name="layout_corner" format="dimension" />
        <!--左上角圆角半径-->
        <attr name="layout_corner_left_top" format="dimension" />
        <!--左下角圆角半径-->
        <attr name="layout_corner_left_bottom" format="dimension" />
        <!--右上角圆角半径-->
        <attr name="layout_corner_right_top" format="dimension" />
        <!--右下角圆角半径-->
        <attr name="layout_corner_right_bottom" format="dimension" />
        <!--边框宽度-->
        <attr name="layout_border_width" format="dimension" />
        <!--边框颜色-->
        <attr name="layout_border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="line_shape">
        <!--线宽度-->
        <attr name="line_width" format="dimension" />
        <!--线颜色-->
        <attr name="line_color" format="color" />
        <!--线宽度-->
        <attr name="line_dash_width" format="dimension" />
        <!--线宽度-->
        <attr name="line_dash_gap" format="dimension" />
    </declare-styleable>
</resources>

