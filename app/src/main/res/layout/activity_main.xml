<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <zpan.lib.shape.TextViewShape
        android:id="@+id/btn_to_shape_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:shape_color_normal="#e74d4d"
        app:shape_corner="8dp"
        app:shape_text="TextViewShape"
        app:shape_text_color="#ffffff"
        app:shape_text_size="16sp" />

    <zpan.lib.shape.TextViewShape
        android:id="@+id/btn_to_shape_layout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:shape_color_normal="#e74d4d"
        app:shape_corner="8dp"
        app:shape_text="LayoutShape"
        app:shape_text_color="#ffffff"
        app:shape_text_size="16sp" />

</androidx.appcompat.widget.LinearLayoutCompat>